<%- layout("/layouts/boilerplate.ejs") %>

<form action="/submit_conversion" method="POST" enctype="multipart/form-data">
        
    <label for="blueprint">Upload 2D Blueprint (Accepted formats: .pdf, .png, .jpg):</label>
    <input type="file" id="blueprint" name="blueprint" accept=".pdf,.png,.jpg,.jpeg" required>

    
    <label for="length">Length of the Building (in meters):</label>
    <input type="number" id="length" name="length" min="1" required>

    <label for="breadth">Breadth of the Building (in meters):</label>
    <input type="number" id="breadth" name="breadth" min="1" required>

    <label for="height">Height of the Building (in meters):</label>
    <input type="number" id="height" name="height" min="1" required>

    
    <label for="floors">Number of Floors:</label>
    <input type="number" id="floors" name="floors" min="1" required>

   
    <label for="staircase">Staircase Layout (Description):</label>
    <textarea id="staircase" name="staircase" rows="3" placeholder="Provide details of staircase locations, structure, etc." required></textarea>

    
    <label for="entryExit">Entry and Exit Points (Description):</label>
    <textarea id="entryExit" name="entryExit" rows="3" placeholder="Provide details of entry and exit locations." required></textarea>

    
    <label for="satelliteImage">Upload Satellite Image (Optional):</label>
    <input type="file" id="satelliteImage" name="satelliteImage" accept=".png,.jpg,.jpeg">

    
    <label for="offlineGoogleMaps">Would you like to integrate offline Google Maps and satellite imagery?</label>
    <input type="checkbox" id="offlineGoogleMaps" name="offlineGoogleMaps"> Yes

    
    <input type="submit" value="Submit for 3D Model Conversion">
</form>