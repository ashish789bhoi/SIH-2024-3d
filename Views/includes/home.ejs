<%- layout("/layouts/boilerplate.ejs") %>
  <!-- Hero Section -->
  <header class="hero">
    <div class="container text-center hero-txt">
      <div class="hero-txt-div">
        <h1 class="display-4">3D Walkthrough System</h1>
        <p class="lead">Enhancing security operations with advanced 3D building modeling and geographic integration</p>
        <a href="#features" class="btn btn-primary btn-lg mt-4">Learn More</a>
      </div>
    </div>
    <div class="hero-bg">
    </div>
  </header>
  
  <!-- Features Section -->
  <section id="features" class="features py-5">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4">
          <div class="feature-box">
            <i class="bi bi-buildings fa-3x"></i>
            <h3>2D to 3D Conversion</h3>
            <p>Convert building blueprints into fully immersive 3D models for mission planning.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-box">
            <i class="bi bi-geo-alt fa-3x"></i>
            <h3>Offline Bhuvan Maps Integration</h3>
            <p>Access geographic data offline with integrated Google Maps and satellite imagery.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-box">
            <i class="bi bi-shield-lock fa-3x"></i>
            <h3>Enhanced Security</h3>
            <p>Standalone functionality to ensure secure and confidential operations.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
